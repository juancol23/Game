<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:orientation="vertical"
    android:background="@color/black"
    tools:context="game.valdcolra.com.game.view.menu.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="519dp"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/imageViewLogin"
            android:layout_marginTop="60dp"
            android:layout_width="200dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Mejores Games"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_height="110dp" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="70dp"
            android:textColor="@color/white"

            android:gravity="center"
            android:text="Comunidad de jugadores expertos compartiendo los mejores jeugos"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"

            android:clickable="false"
            android:gravity="center"
            android:text="Escoge una categoria"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"
          />


        <FrameLayout
            android:id="@+id/framePlataforma"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border_btn_omitir"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="22dp"
                android:clickable="false"
                android:src="@mipmap/plataform" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:text="Plataforma"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameCarrera"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border_btn_omitir"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="22dp"
                android:clickable="false"
                android:src="@mipmap/carrer" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:text="Carrera"
                android:textColor="@color/white" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameArcade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/border_btn_omitir"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="22dp"
                android:clickable="false"
                android:src="@mipmap/arca" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="false"
                android:gravity="center"
                android:text="Arcade"
                android:textColor="@color/white" />


        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewText2o"

            android:layout_height="35dp"
            android:layout_width="100dp" />
    </LinearLayout>


</LinearLayout>
